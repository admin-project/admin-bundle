{% extends layout %}

{% block body %}
    <div class="col-xs-12 col-md-12">
        <div class="box">
            <div class="box-body {% if admin.datagrid.results|length > 0 %}table-responsive no-padding{% endif %}">
                {% if admin.datagrid.results|length > 0 %}
                    <table class="table table-bordered table-striped sonata-ba-list">
                        {% block table_head %}
                        <thead>
                            <tr class="sonata-ba-list-field-header">
                                {% for field in admin.fieldmapper.all %}
                                    <th>{{ field.name }}</th>
                                {% endfor %}
                            </tr>
                        </thead>
                        {% endblock table_head %}

                        {% block table_body %}
                        <tbody>
                            {% for result in admin.datagrid.results %}
                                {% include admin_pool.getTemplate('list_row') %}
                            {% endfor %}
                        </tbody>
                        {% endblock table_body %}
                    </table>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock body %}
